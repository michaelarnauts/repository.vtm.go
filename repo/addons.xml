<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.vtm.go" name="VTM GO" version="0.9.3" provider-name="Michaël Arnauts">
    <requires>
        <import addon="xbmc.python" version="2.26.0"/>
        <import addon="script.module.dateutil" version="2.6.0"/>
        <import addon="script.module.pysocks" version="1.6.8" optional="true"/>
        <import addon="script.module.requests" version="2.22.0"/>
        <import addon="script.module.routing" version="0.2.0"/>
        <import addon="script.module.inputstreamhelper" version="0.3.4"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="plugin.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.service" library="service.py"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Access the VTM GO library</summary>
        <description lang="en_GB">This add-on gives access to all live tv channels and all video-on-demand content available on the VTM GO platform.</description>
        <disclaimer lang="en_GB">This add-on is not officially commissioned/supported by DPG Media and is provided 'as is' without any warranty of any kind. The VTM GO name, VTM GO logo and channel icons are property of DPG Media and are used according to the fair use policy.</disclaimer>
        <platform>all</platform>
        <license>GPL-3.0</license>
        <news>v0.9.3 (26/01/2020)
- Implement profiles and upgrade VTM GO API
- Added fanart
        </news>
        <source>https://github.com/michaelarnauts/plugin.video.vtm.go</source>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
        </assets>
        <reuselanguageinvoker>true</reuselanguageinvoker>
    </extension>
</addon>

<addon id="repository.vtm.go" name="VTM GO Repository" version="1.0.0" provider-name="Michaël Arnauts">
	<extension point="xbmc.addon.repository" name="VTM GO Repository">
		<dir>
			<info>https://github.com/michaelarnauts/repository.vtm.go/raw/master/repo/addons.xml</info>
			<checksum>https://github.com/michaelarnauts/repository.vtm.go/raw/master/repo/addons.xml.md5</checksum>
			<datadir zip="true">https://github.com/michaelarnauts/repository.vtm.go/raw/master/repo</datadir>
		</dir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>VTM GO Repository</summary>
		<description>Kodi repository for the unofficial VTM GO addon.</description>
		<platform>all</platform>
		<assets>
			<icon>icon.png</icon>
			<fanart>fanart.png</fanart>
		</assets>
	</extension>
</addon>

</addons>